function demo;
interface of demo {
	out bool B;
}

policy B5 of demo {
	internals {
		constant uint8_t B5_ticks := 5;
		dtimer_t v := 0;
	}

	states {
		ls {
			//if we receive a B, reset the timer
			-> ls on B && v < B5_ticks: v := 0;

			//if we haven't received a B for > B5_ticks, then violation
			-> violation on !B && v >= B5_ticks recover B := 1;
		}
	}
}